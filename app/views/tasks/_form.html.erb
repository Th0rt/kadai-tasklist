<%= form_for(@task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, "タスク名" %>
  <%= f.text_field :content %>
  <%= f.select :status, ["未着手", "進行中", "保留", "完了"] %>
  <%= f.submit "投稿" %>
  
<% end %>